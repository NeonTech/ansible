services:
  postgresql:
    image: bitnami/postgresql-repmgr@{{ postgresql_docker_version }}
    container_name: postgresql
    restart: always
    stop_grace_period: 1m
    environment:
      POSTGRESQL_DATABASE: {{ postgresql_database }}
      POSTGRESQL_USERNAME: {{ postgresql_username }}
      POSTGRESQL_PASSWORD_FILE: /run/secrets/postgresql-password
      REPMGR_DATABASE: {{ postgresql_repmgr_database }}
      REPMGR_USERNAME: {{ postgresql_repmgr_username }}
      REPMGR_PASSWORD_FILE: /run/secrets/repmgr-password
      REPMGR_NODE_NAME: {{ postgresql_repmgr_node_name }}-{{ postgresql_repmgr_node_id }}
      REPMGR_NODE_NETWORK_NAME: {{ postgresql_repmgr_node_network_name }}
      REPMGR_PRIMARY_HOST: {{ postgresql_repmgr_primary_host }}
      REPMGR_PARTNER_NODES: {{  postgresql_repmgr_partner_nodes | join(",") }}
    secrets:
      - postgresql-password
      - repmgr-password
    ports:
      - 5432:5432
    volumes:
      - postgresql:/bitnami/postgresql

secrets:
  postgresql-password:
    file: ./postgresql-password
  repmgr-password:
    file: ./repmgr-password

networks:
  default:
    name: postgresql

volumes:
  postgresql:
    name: postgresql
